<%- include("header") %>

<div class="navbar">
    <a href="/home">Home</a>
    <a href="/courses">Your Courses</a>
    <a href="/logout">Logout</a>
</div>

<!-- Profile Section -->
<div class="profile-container">

    <!-- Contact Info Form -->
    <form action="/updateProfile" method="POST" class="contact-info">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= (user && user.email) ? user.email : '' %>">

        <label for="linkedin">LinkedIn</label>
        <input type="text" id="linkedin" name="linkedin" value="<%= (user && user.linkedin) ? user.linkedin : '' %>">

        <label for="facebook">Facebook</label>
        <input type="text" id="facebook" name="facebook" value="<%= (user && user.facebook) ? user.facebook : '' %>">

        <label for="twitter">Twitter</label>
        <input type="text" id="twitter" name="twitter" value="<%= (user && user.twitter) ? user.twitter : '' %>">

        <button type="submit">Update Profile</button>
    </form>
</div>

<%- include("footer") %>